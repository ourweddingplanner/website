{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      ".eslint.json",
      ".travis.yml",
      "firebase.json",
      "polymer.json",
      "LICENSE",
      "README.md",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
